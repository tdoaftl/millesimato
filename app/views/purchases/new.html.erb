<%= include_gon %>
購入画面<br>
<%= form_with model: @purchase_delivery, url: clothing_purchases_path(@clothing), id: 'charge-form', local: true do |f| %>
       姓<%= f.text_field :last_name,  placeholder:"例) 山田" %>
     名<%= f.text_field :first_name,  placeholder:"例) 陸太郎" %>
<br>
      セイ<%= f.text_field :last_name_kana, placeholder:"例) ヤマダ" %>
     メイ<%= f.text_field :first_name_kana, placeholder:"例) リクタロウ" %>
<br>     〒 <%= f.text_field :post_code,  placeholder:"例) 〒" %>
 <br>   都道府県        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
  <br>   市区町村 <%= f.text_field :city,  placeholder:"例) 市区町村" %>
 <br>    住所 <%= f.text_field :address,  placeholder:"例) 住所" %>
  <br>     建物<%= f.text_field :building,  placeholder:"例) 建物" %>
  <br>   電話番号 <%= f.text_field :phone_number, placeholder:"例) 電話番号" %>
  
 <%= f.check_box :update_information, value: '1' %>
  <%= f.label :update_information, 'この情報をユーザー情報に反映する' %>

    <div class='form-wrap'>
    <p>カード番号</p>
    <div id="number-form" class="input-default"></div>
  </div>
  <div class='form-wrap'>
    <p>期限</p>
    <div id="expiry-form" class="input-default"></div>
  </div>
  <div class='form-wrap'>
    <p>カード背面4桁もしくは3桁の番号</p>
    <div id="cvc-form" class="input-default"></div>
  </div>

  <%= f.submit '購入を確定する' %>
<% end %>