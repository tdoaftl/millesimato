
<%= render "shared/header" %>
<main>
  <div class="main-container">
    <div class="side-container">
      <%= render "shared/user_sidebar" %>
    </div>
    <div class="user-container">
      
      <%= form_with model: @information, url: update_information_users_path, local: true, class: 'registration-form' do |f| %>
  
   <div class="d-flex mb-3">
      <div class="w-50 pe-2">
         <%= f.label :last_name, '姓' %>
         <%= f.text_field :last_name, placeholder: '例）鈴木' %>
      </div>
      <div class="w-50 pe-2">
        <%= f.label :first_name, '名' %>
        <%= f.text_field :first_name, placeholder: '例) 太郎' %>
     </div>
   </div>

      <div class="d-flex mb-3">
      <div class="w-50 pe-2">
        <%= f.label :last_name_kana, 'セイ' %>
        <%= f.text_field :last_name_kana, placeholder: '例) スズキ' %>
      </div>
      <div class="w-50 pe-2">
        <%= f.label :first_name_kana, 'メイ' %>
        <%= f.text_field :first_name_kana, placeholder: '例) タロウ' %>
     </div>
   </div>


  <div class="field">
    <%= f.label :post_code, '〒' %>
    <%= f.text_field :post_code, placeholder: '例) 〒' %>
  </div>

  <div class="field">
    <%= f.label :prefecture_id, '都道府県' %>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class: 'select-box'}) %>
  </div>

  <div class="field">
    <%= f.label :city, '市区町村' %>
    <%= f.text_field :city, placeholder: '例) 市区町村' %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, placeholder: '例) 住所' %>
  </div>

  <div class="field">
    <%= f.label :building, '建物' %>
    <%= f.text_field :building, placeholder: '例) 建物' %>
  </div>

  <div class="field">
    <%= f.label :phone_number, '電話番号' %>
    <%= f.text_field :phone_number, placeholder: '例) 電話番号' %>
  </div>

  <div class="actions">
    <%= f.submit '変更', class: 'register-red-btn' %>
  </div>
<% end %>
</div>
 </div>
</main>