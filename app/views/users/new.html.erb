
ユーザー登録
 <%= form_with model: @information, url: create_information_users_path, local: true do |f| %> 

      <%= f.text_field :last_name,  placeholder:"例) 山田" %>
     <%= f.text_field :first_name,  placeholder:"例) 陸太郎" %>

      <%= f.text_field :last_name_kana, placeholder:"例) ヤマダ" %>
     <%= f.text_field :first_name_kana, placeholder:"例) リクタロウ" %>

          <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>

      <%= f.text_field :post_code,  placeholder:"例) 〒" %>
      <%= f.text_field :prefecture_id,  placeholder:"例) 都道府県" %>
      <%= f.text_field :city,  placeholder:"例) 市区町村" %>
      <%= f.text_field :address,  placeholder:"例) 住所" %>
      <%= f.text_field :building,  placeholder:"例) 建物" %>
      <%= f.text_field :phone_number, placeholder:"例) 電話番号" %>
      <%= f.submit "会員登録" ,class:"register-red-btn" %> 
 <% end %> 
