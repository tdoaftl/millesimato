<header>
  <div class="container d-flex align-items-center justify-content-between">
    <!-- 画像（ロゴ） -->
    <a href="/">
      <%= image_tag "head_image.png", style: "height: 15px; width: auto;" %>
    </a>

    <!-- ボタンエリア -->
    <div class="d-flex gap-3">
      <% if user_signed_in? %>
        <%= link_to 'MY page', users_path, class: "btn btn-primary py-2 px-4" %>
        <%= link_to 'Log out', destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-primary py-2 px-4" %>
      <% else %>
        <%= link_to '新規登録', new_user_registration_path, class: "btn btn-primary py-2 px-4" %>
        <%= link_to 'ログイン', new_user_session_path, class: "btn btn-primary py-2 px-4" %>
      <% end %>
    </div>
  </div>
</header>
