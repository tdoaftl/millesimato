<%= render "shared/header" %>
<h1>トップページ</h1>

  <div id="price-range-slider" style="margin: 20px auto;"></div>
<p>価格範囲: ¥<span id="min-price-value">1000</span> 〜 ¥<span id="max-price-value">23000</span></p>

  <div id="product-count" style="margin: 10px 0;">
  <!-- 商品数がここに表示されます -->
</div>
  

 <div id="product-list">
  <!-- 商品がここに表示されます -->

  <!-- 他の商品の要素も続きます -->
</div>




<%# 管理者 %>
<% if current_user.admin? %>
<%= link_to '商品登録', new_clothing_path %>
 <div id="clothing-list"> 
 <% @clothings.each do |clothing| %>
   <div class="clothing-item">
      <p>¥<%= clothing.price %></p>
         <% if clothing.image.attached? %>
     <%= image_tag clothing.image,  class: "item-img" %>
    </div>
  <% end %>
 </div> 
 <% end %> 
 <% end %> 
