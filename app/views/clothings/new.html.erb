商品登録<br>
 <%= form_with model: @clothing, local: true do |f| %> 
 <%= f.file_field :image %>
  <br>     アイテム<%= f.text_field :item,  placeholder:"アイテム名" %>
 <br>    説明<%= f.text_field :description,  placeholder:"説明" %>
<br> 金額<%= f.text_field :price,  placeholder:"金額" %>
<fieldset>
  <legend>ブランド</legend>
  <% Brand.all.each do |brand| %>
    <div>
      <%= f.radio_button :brand_id, brand.id, id: "brand_#{brand.id}" %>
      <%= f.label "brand_#{brand.id}", brand.name %>
    </div>
  <% end %>
</fieldset>

<fieldset>
<legend>年代</legend> <br>
  <% Era.all.each do |era| %>
    <div>
      <%= f.radio_button :era_id, era.id, id: "era_#{era.id}" %>
      <%= f.label "era_#{era.id}", era.name %>
    </div>
  <% end %>
</fieldset>

