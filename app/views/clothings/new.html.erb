  </div>
</fieldset>


    <div> 
      <p>ステータスを選択してください:</p>
      <%= f.radio_button :visibility, :visible, id: "visibility_visible", checked: @clothing.visibility.nil? %>
      <%= f.label :visibility, "表示", for: "visibility_visible" %> 
    </div>

    <div>
      <%= f.radio_button :visibility, :hidden, id: "visibility_hidden" %>
      <%= f.label :visibility, "非表示", for: "visibility_hidden" %>
    </div> 

    <br> <%= f.submit "商品登録", class: "clothing-register-btn" %> 
  <% end %> 
</div>
