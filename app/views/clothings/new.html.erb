       <%= render "shared/admin_sidebar" %>
       
       <div class="clothing-form-container">
  <h2>商品登録</h2>
  <%= form_with model: @clothing, local: true, html: { class: "clothing-form" } do |f| %> 
    <%= f.file_field :image %>

    <br> アイテム<%= f.text_field :item, placeholder:"アイテム名" %>
    <br> 説明<%= f.text_field :description, placeholder:"説明" %>
    <br> 金額<%= f.text_field :price, placeholder:"金額" %>

<fieldset>
  <legend>ブランド</legend>
  <div class="radio-group">
    <% Brand.all.each do |brand| %>
      <div>
        <%= f.radio_button :brand_id, brand.id, id: "brand_#{brand.id}" , checked: (@clothing.brand_id.nil? && brand.id == 1) || @clothing.brand_id == brand.id %>
        <%= f.label "brand_#{brand.id}", brand.name %>
      </div>
    <% end %>
  </div>
</fieldset>

<fieldset>
  <legend>年代</legend>
  <div class="radio-group">
    <% Era.all.each do |era| %>
      <div>
        <%= f.radio_button :era_id, era.id, id: "era_#{era.id}" , checked: (@clothing.era_id.nil? && era.id == 1) || @clothing.era_id == era.id %>
